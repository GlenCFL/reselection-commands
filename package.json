{
  "name": "glencfl-vscode-commands",
  "displayName": "GlenCFL's VSCode Commands",
  "description": "Extra commands for VSCode that I personally find useful.",
  "version": "1.1.0",
  "publisher": "GlenCFL",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlenCFL/vscode-commands.git"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:glencfl.copyAllRight",
    "onCommand:glencfl.cutAllRight",
    "onCommand:glencfl.copyLine",
    "onCommand:glencfl.cutLine"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "glencfl.cutAllRight",
          "when": "!editorReadonly"
        },
        {
          "command": "glencfl.cutLine",
          "when": "!editorReadonly"
        }
      ]
    },
    "commands": [
      {
        "command": "glencfl.copyAllRight",
        "title": "Copy All Right"
      },
      {
        "command": "glencfl.cutAllRight",
        "title": "Cut All Right",
        "enablement": "!editorReadonly"
      },
      {
        "command": "glencfl.copyLine",
        "title": "Copy Line"
      },
      {
        "command": "glencfl.cutLine",
        "title": "Cut Line"
      }
    ],
    "keybindings": [
      {
        "command": "glencfl.copyAllRight",
        "key": "Ctrl+J",
        "when": "textInputFocus"
      },
      {
        "command": "glencfl.cutAllRight",
        "key": "Ctrl+K",
        "when": "textInputFocus"
      },
      {
        "command": "glencfl.copyLine",
        "key": "Ctrl+;",
        "when": "textInputFocus"
      },
      {
        "command": "glencfl.cutLine",
        "key": "Ctrl+'",
        "when": "textInputFocus"
      }
    ]
  },
  "scripts": {
    "clean": "node tasks/clean",
    "build": "tsc",
    "build:release": "tsc --sourceMap false",
    "watch": "tsc --watch",
    "zip": "vsce package",
    "package": "run-s clean build:release zip"
  },
  "devDependencies": {
    "@types/vscode": "1.41",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.4",
    "vsce": "^1.71.0"
  }
}
